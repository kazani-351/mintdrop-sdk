{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom"],
    // "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "strict": false,
    "jsx": "react-jsx"
    // "jsxImportSource": "preact",
    // "types": ["preact"]
  },
  "exclude": ["dist", "node_modules", "test/types"]
}
