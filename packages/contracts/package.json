{
  "name": "@mintdrop/contracts",
  "version": "0.3.8",
  "description": "The Mintdrop suite of contracts and utils.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "hardhat clean && rm -rf artifacts cache build dist",
    "generate": "npx hardhat run scripts/version.ts",
    "build": "hardhat compile && tsc dist/index.ts",
    "dev": "nodemon --exec pnpm build",
    "coverage": "hardhat coverage",
    "test": "hardhat test",
    "test:watch": "nodemon --exec \"hardhat test\"",
    "verify": "npx hardhat verify --network rinkeby 0x0103D33D16968b3C7CBcB41ae13c32D562E02001 --constructor-args verify/arguments.js"
  },
