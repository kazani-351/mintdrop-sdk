{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": false,
    "lib": ["ES2017", "dom"],
    "types": ["vi-fetch/matchers"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
